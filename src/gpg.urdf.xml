<?xml version="1.0"?>
<robot name="my_gpg">
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.15 0.15 0.075"/>
            </geometry>
        </visual>
    </link>
    <link name="camera_link">
        <visual>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
        </visual>
    </link>
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder lenght="0.065" radius="0.025"/>
            </geometry>
        </visual>
    </link>
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder lenght="0.065" radius="0.025"/>
            </geometry>
        </visual>
    </link>
    <joint name="base_link_to_left_wheel" type="continuous">
      <parent link="base_link"/>
      <child link="left_wheel"/>
      <axis xyz="0 1 0"/>
      <origin xyz="0 0.03 -0.03"/>
    </joint>
    <joint name="base_link_to_right_wheel" type="continuous">
      <parent link="base_link"/>
      <child link="right_wheel"/>
      <axis xyz="0 1 0"/>
      <origin xyz="0 -0.03 -0.03"/>
    </joint>

    <joint name="base_link_to_camera" type="continuous">
      <parent link="base_link"/>
      <child link="camera_link"/>
      <axis xyz="0 1 0"/>
      <origin xyz="0 -0.03 -0.03"/>
    </joint>
</robot>