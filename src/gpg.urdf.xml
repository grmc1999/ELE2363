<?xml version="1.0"?>
<robot name="my_gpg">
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.15 0.15 0.075"/>
            </geometry>
        </visual>
    </link>
    <link name="camera_link">
        <visual>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0"/>
        </visual>
    </link>
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.065" length="0.025"/>
            </geometry>
            <origin xyz="0 0.0 0.0" rpy="1.57075 0 0"/>
        </visual>
    </link>
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.065" length="0.025"/>
                
            </geometry>
            <origin xyz="0 0.0 0.0" rpy="1.57075 0 0"/>
        </visual>
    </link>
    <joint name="base_link_to_left_wheel" type="continuous">
        
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin rpy="0 0 0" xyz="0.0 0.10 -0.03"/>
        <axis xyz="0 1 0"/>
        
    </joint>
    <joint name="base_link_to_right_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.10 -0.03"/>
        <axis xyz="0 1 0"/>
        
    </joint>

    <joint name="base_link_to_camera" type="revolute">
        <limit effort="1000.0" lower="0.0" upper="0.548" velocity="0.5"/>
        <parent link="base_link"/>
        <origin xyz="0.10 0  0.03"/>
        <child link="camera_link"/>
        <axis xyz="0 0 1"/>
        
    </joint>
</robot>